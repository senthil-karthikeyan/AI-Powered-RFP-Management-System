{
  "openapi": "3.0.3",
  "info": {
    "title": "AI-powered RFP Management API",
    "description": "APIs for creating RFPs, managing vendors, sending RFPs via email, parsing vendor proposals, and AI-assisted proposal evaluation.",
    "version": "1.1.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "Local development server"
    }
  ],
  "tags": [
    { "name": "RFP", "description": "Request for Proposal APIs" },
    { "name": "Vendor", "description": "Vendor management APIs" },
    { "name": "Email", "description": "Inbound email webhook APIs" }
  ],
  "paths": {
    "/rfps": {
      "post": {
        "summary": "Create RFP (AI-powered)",
        "tags": ["RFP"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateRfpRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "RFP created successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiSuccessRfp" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "500": { "$ref": "#/components/responses/InternalServerError" }
        }
      },
      "get": {
        "summary": "List all RFPs",
        "tags": ["RFP"],
        "responses": {
          "200": {
            "description": "List of RFPs",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiSuccessRfpList" }
              }
            }
          }
        }
      }
    },

    "/rfps/{id}": {
      "get": {
        "summary": "Get RFP by ID",
        "tags": ["RFP"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "RFP details",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiSuccessRfp" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },

    "/rfps/{id}/send": {
      "post": {
        "summary": "Send RFP to selected vendors",
        "tags": ["RFP"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/SendRfpRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "RFP sent to vendors",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiSuccessMessage" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" }
        }
      }
    },

    "/rfps/{id}/evaluate": {
      "post": {
        "summary": "Evaluate vendor proposals (AI-assisted)",
        "description": "Compares all proposals for an RFP and returns a ranked evaluation with an AI recommendation.",
        "tags": ["RFP"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/EvaluateRfpRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Evaluation completed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiSuccessEvaluation"
                }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "400": { "$ref": "#/components/responses/BadRequest" }
        }
      }
    },

    "/vendors": {
      "post": {
        "summary": "Create vendor",
        "tags": ["Vendor"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateVendorRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Vendor created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiSuccessVendor" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" }
        }
      },
      "get": {
        "summary": "List vendors",
        "tags": ["Vendor"],
        "responses": {
          "200": {
            "description": "List of vendors",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiSuccessVendorList"
                }
              }
            }
          }
        }
      }
    },

    "/emails/inbound": {
      "post": {
        "summary": "Inbound vendor email webhook",
        "tags": ["Email"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/InboundEmailRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Proposal parsed and stored",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiSuccessProposal" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "CreateRfpRequest": {
        "type": "object",
        "required": ["rawInput"],
        "properties": {
          "rawInput": { "type": "string" }
        }
      },

      "SendRfpRequest": {
        "type": "object",
        "required": ["vendorIds"],
        "properties": {
          "vendorIds": { "type": "array", "items": { "type": "string" } }
        }
      },

      "CreateVendorRequest": {
        "type": "object",
        "required": ["name", "email"],
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" }
        }
      },

      "InboundEmailRequest": {
        "type": "object",
        "required": ["text", "custom_args"],
        "properties": {
          "from": { "type": "string" },
          "text": { "type": "string" },
          "custom_args": {
            "type": "object",
            "required": ["rfpId", "vendorId"],
            "properties": {
              "rfpId": { "type": "string" },
              "vendorId": { "type": "string" }
            }
          }
        }
      },

      "EvaluateRfpRequest": {
        "type": "object",
        "properties": {
          "criteria": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/EvaluationCriterion" }
          }
        }
      },

      "EvaluationCriterion": {
        "type": "object",
        "required": ["name", "weight"],
        "properties": {
          "name": { "type": "string" },
          "weight": { "type": "number" }
        }
      },

      "ProposalScore": {
        "type": "object",
        "properties": {
          "proposalId": { "type": "string" },
          "vendorId": { "type": "string" },
          "totalScore": { "type": "number" },
          "breakdown": {
            "type": "object",
            "additionalProperties": { "type": "number" }
          },
          "pros": { "type": "array", "items": { "type": "string" } },
          "cons": { "type": "array", "items": { "type": "string" } }
        }
      },

      "EvaluationResult": {
        "type": "object",
        "properties": {
          "criteria": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/EvaluationCriterion" }
          },
          "scores": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/ProposalScore" }
          },
          "recommendedProposalId": { "type": "string" },
          "reasoning": { "type": "string" }
        }
      },

      "Rfp": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "rawContent": { "type": "string" },
          "structuredContent": { "type": "object" }
        }
      },

      "Vendor": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string" }
        }
      },

      "Proposal": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "rfpId": { "type": "string" },
          "vendorId": { "type": "string" },
          "rawContent": { "type": "string" },
          "structuredContent": { "type": "object" }
        }
      },

      "ApiSuccessRfp": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "data": { "$ref": "#/components/schemas/Rfp" }
        }
      },

      "ApiSuccessRfpList": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Rfp" }
          }
        }
      },

      "ApiSuccessVendor": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "data": { "$ref": "#/components/schemas/Vendor" }
        }
      },

      "ApiSuccessVendorList": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Vendor" }
          }
        }
      },

      "ApiSuccessProposal": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "data": { "$ref": "#/components/schemas/Proposal" }
        }
      },

      "ApiSuccessEvaluation": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "data": { "$ref": "#/components/schemas/EvaluationResult" }
        }
      },

      "ApiSuccessMessage": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "data": {
            "type": "object",
            "properties": {
              "message": { "type": "string" }
            }
          }
        }
      },

      "ApiError": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "error": {
            "type": "object",
            "properties": {
              "code": { "type": "string" },
              "message": { "type": "string" }
            }
          }
        }
      }
    },

    "responses": {
      "BadRequest": {
        "description": "Invalid request",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/ApiError" }
          }
        }
      },
      "NotFound": {
        "description": "Resource not found",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/ApiError" }
          }
        }
      },
      "InternalServerError": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/ApiError" }
          }
        }
      }
    }
  }
}
